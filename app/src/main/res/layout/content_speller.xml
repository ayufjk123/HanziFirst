<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.uhlexy.hanziFirst.Speller"
    tools:showIn="@layout/activity_speller"
    android:background="#ffc957"
    android:padding="3dp">



    <RelativeLayout tools:context="com.example.uhlexy.a2.MainActivity"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:background="@drawable/custom_layout_learn_darkorange" >

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Check Answer"
            android:id="@+id/btnAnswer"
            android:layout_alignBottom="@+id/textView3"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:background="@drawable/button_shape_speller_2_l"
            android:textColor="#000000"
            android:onClick="onClickAnswer" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="See Answer"
            android:id="@+id/btnHelp"
            android:layout_alignBottom="@+id/textView3"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:background="@drawable/button_shape_speller_2_r"
            android:textColor="#000000"
            android:onClick="onClickHelp" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:text="Hanzi"
            android:id="@+id/btnHanzi"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:background="@drawable/button_shape_speller"
            android:textSize="10dp"
            android:layout_alignRight="@+id/txtVTotal"
            android:layout_alignEnd="@+id/txtVTotal"
            android:textColor="#000000"
            android:onClick="onClickHanzi" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:text="Restart"
            android:id="@+id/btnRestart"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:background="@drawable/button_shape_speller"
            android:textSize="10dp"
            android:layout_alignLeft="@+id/txtVCorrect"
            android:layout_alignStart="@+id/txtVCorrect"
            android:textColor="#000000"
            android:onClick="onClickRestart" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:text="             Sound             "
            android:id="@+id/btnSound"
            android:background="@drawable/button_shape_speller"
            android:textSize="10dp"
            android:textColor="#000000"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:onClick="onClickSound" />

        <Space
            android:layout_width="20px"
            android:layout_height="20px"
            android:layout_below="@+id/txtVTopPinyin"
            android:layout_centerHorizontal="true"
            android:id="@+id/space"
            android:layout_alignParentTop="false"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true" />

        <Space
            android:layout_width="20px"
            android:layout_height="20px"
            android:layout_below="@+id/txtVTopEng"
            android:layout_centerHorizontal="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:id="@+id/space2" />

        <Space
            android:layout_width="20px"
            android:layout_height="20px"
            android:layout_below="@+id/textView3"
            android:layout_centerHorizontal="true"
            android:id="@+id/space3" />

        <Space
            android:layout_width="60px"
            android:layout_height="20px"
            android:layout_above="@+id/btnHanzi"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignRight="@+id/textView3"
            android:layout_alignEnd="@+id/textView3"
            android:layout_alignParentRight="true"
            android:id="@+id/space4" />

        <Space
            android:layout_width="20px"
            android:layout_height="20px"
            android:layout_above="@+id/txtVTotal"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignRight="@+id/space4"
            android:layout_alignEnd="@+id/space4"
            android:id="@+id/space5" />

        <Space
            android:layout_width="20px"
            android:layout_height="60px"
            android:layout_below="@+id/space2"
            android:layout_centerHorizontal="true"
            android:id="@+id/space6" />

        <Space
            android:layout_width="20px"
            android:layout_height="60px"
            android:layout_above="@+id/btnAnswer"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignRight="@+id/btnHelp"
            android:layout_alignEnd="@+id/btnHelp"
            android:id="@+id/space7" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:text="SHOW PINYIN"
            android:background="@drawable/custom_layout_speller_orange"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:gravity="center"
            android:id="@+id/txtVTopPinyin"
            android:textColor="#000000"
            android:onClick="showPinyin" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:text="SHOW ENGLISH EXPLAIN"
            android:background="@drawable/custom_layout_speller_orange"
            android:gravity="center"
            android:id="@+id/txtVTopEng"
            android:layout_below="@+id/space"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="false"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:textColor="#000000"
            android:onClick="showWord" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/custom_layout_learn_darkorange"
            android:gravity="center"
            android:id="@+id/textView3"
            android:layout_below="@+id/space2"
            android:layout_centerHorizontal="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_above="@+id/space5" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:text="50"
            android:background="@drawable/custom_layout_speller_orange"
            android:gravity="center_vertical|center"
            android:id="@+id/txtVTotal"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_above="@+id/space4"
            android:layout_alignRight="@+id/btnAnswer"
            android:layout_alignEnd="@+id/btnAnswer"
            android:textColor="#000000" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:background="@drawable/custom_layout_learn_green"
            android:gravity="center"
            android:id="@+id/txtVCorrect"
            android:layout_above="@+id/space4"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@+id/txtVTotal"
            android:layout_alignLeft="@+id/btnHelp"
            android:layout_alignStart="@+id/btnHelp"
            android:textColor="#000000" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:id="@+id/txtVIncorrect"
            android:background="@drawable/custom_layout_learn_red"
            android:allowUndo="true"
            android:gravity="center"
            android:textColor="#000000"
            android:layout_above="@+id/space4"
            android:layout_alignRight="@+id/btnSound"
            android:layout_alignEnd="@+id/btnSound"
            android:layout_alignLeft="@+id/btnSound"
            android:layout_alignStart="@+id/btnSound"
            android:layout_alignTop="@+id/txtVTotal" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="x"
            android:id="@+id/textView7"
            android:layout_alignBottom="@+id/txtVIncorrect"
            android:gravity="top|right"
            android:layout_alignRight="@+id/txtVIncorrect"
            android:layout_alignEnd="@+id/txtVIncorrect"
            android:layout_alignLeft="@+id/txtVIncorrect"
            android:layout_alignStart="@+id/txtVIncorrect"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="15dp"
            android:layout_alignTop="@+id/textView8"
            android:textColor="#ffffff" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+"
            android:id="@+id/textView8"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:gravity="top|center|right"
            android:layout_alignBottom="@+id/txtVTotal"
            android:layout_marginLeft="15dp"
            android:layout_marginBottom="15dp"
            android:layout_below="@+id/space5"
            android:layout_marginTop="15dp"
            android:layout_alignRight="@+id/txtVTotal"
            android:layout_alignEnd="@+id/txtVTotal"
            android:layout_margin="15dp"
            android:textColor="#ffffff" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="✓"
            android:id="@+id/textView9"
            android:layout_toRightOf="@+id/editText"
            android:layout_above="@+id/space4"
            android:layout_alignRight="@+id/txtVCorrect"
            android:layout_alignEnd="@+id/txtVCorrect"
            android:gravity="top|right"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="15dp"
            android:layout_alignTop="@+id/textView8"
            android:textSize="13dp"
            android:textColor="#ffffff" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="  PYN:"
            android:id="@+id/txtVTopPinyinTitle"
            android:layout_alignTop="@+id/txtVTopPinyin"
            android:layout_toLeftOf="@+id/editText"
            android:gravity="left|center"
            android:layout_above="@+id/space"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="  ENG:"
            android:id="@+id/txtVTopEngTitle"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_above="@+id/space2"
            android:layout_alignTop="@+id/txtVTopEng"
            android:gravity="left|center"
            android:layout_alignRight="@+id/txtVTopPinyinTitle"
            android:layout_alignEnd="@+id/txtVTopPinyinTitle" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/editText"
            android:layout_below="@+id/space6"
            android:layout_toRightOf="@+id/btnAnswer"
            android:layout_toLeftOf="@+id/btnHelp"
            android:layout_above="@+id/space7"
            android:background="@drawable/custom_layout_speller_orange"
            android:autoText="true"
            android:textSize="60dp" />
    </RelativeLayout>
</RelativeLayout>
